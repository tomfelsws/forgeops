<!DOCTYPE ServicesConfiguration
        PUBLIC "=//iPlanet//Service Management Services (SMS) 1.0 DTD//EN"
        "jar://com/sun/identity/sm/sms.dtd">

<ServicesConfiguration>
    <Service name="sunAMAuthSesamFidoService" version="1.0">
        <Schema
                serviceHierarchy="/DSAMEConfig/authentication/sunAMAuthSesamFidoService"
                i18nFileName="amAuthSesam" revisionNumber="10"
                i18nKey="SesamFido" resourceName="sesamFido">
            <Organization>
                <!-- Specify resourceName for a JSON-friendly property in the REST SMS -->
                <AttributeSchema name="sunAMAuthSesamFidoAuthLevel" resourceName="authLevel"
                                 type="single" syntax="number_range" rangeStart="0" rangeEnd="2147483647"
                                 i18nKey="a500">
                    <DefaultValues>
                        <Value>3</Value>
                    </DefaultValues>
                </AttributeSchema>

                <AttributeSchema name="fido-endpoint" resourceName="fidoEndpoint"
                                 type="single" syntax="string" validator="no" i18nKey="a531">
                    <DefaultValues>
                        <Value>http://local.pnet.ch:8090/fidouaf</Value>
                    </DefaultValues>
                </AttributeSchema>

                <AttributeSchema name="fido-endpoint-last-auth" resourceName="fidoEndpointLastAuth"
                                 type="single" syntax="string" validator="no" i18nKey="a532">
                    <DefaultValues>
                        <Value>http://local.pnet.ch:8090/fidouaf/v1/public/lastAuth/</Value>
                    </DefaultValues>
                </AttributeSchema>

                <AttributeSchema name="fido-endpoint-is-authed" resourceName="fidoEndpointIsAuthenticated"
                                 type="single" syntax="string" validator="no" i18nKey="a533">
                    <DefaultValues>
                        <Value>http://local.pnet.ch:8090/fidouaf/v1/public/isAuthenticated/</Value>
                    </DefaultValues>
                </AttributeSchema>

                <AttributeSchema name="allowed-time-diff" resourceName="allowedTimeDiff"
                                 type="single" syntax="number" validator="no" i18nKey="a534">
                    <DefaultValues>
                        <Value>300</Value>
                    </DefaultValues>
                </AttributeSchema>

                <!--
                 For Auth Modules, the parent Schema element specifies the REST SMS resourceName,
                 and the nested SubSchema must have resourceName="USE-PARENT"
                -->
                <SubSchema name="serverconfig" inheritance="multiple" resourceName="USE-PARENT">

                    <AttributeSchema name="sunAMAuthSesamFidoAuthLevel" resourceName="authLevel"
                                     type="single" syntax="number_range" rangeStart="0" rangeEnd="2147483647"
                                     i18nKey="a500">
                        <DefaultValues>
                            <Value>3</Value>
                        </DefaultValues>
                    </AttributeSchema>

                    <AttributeSchema name="fido-endpoint" resourceName="fidoEndpoint"
                                     type="single" syntax="string" validator="no" i18nKey="a531">
                        <DefaultValues>
                            <Value>http://local.pnet.ch:8090/fidouaf</Value>
                        </DefaultValues>
                    </AttributeSchema>

                    <AttributeSchema name="fido-endpoint-last-auth" resourceName="fidoEndpointLastAuth"
                                     type="single" syntax="string" validator="no" i18nKey="a532">
                        <DefaultValues>
                            <Value>http://local.pnet.ch:8090/fidouaf/v1/public/lastAuth/</Value>
                        </DefaultValues>
                    </AttributeSchema>

                    <AttributeSchema name="fido-endpoint-is-authed" resourceName="fidoEndpointIsAuthenticated"
                                     type="single" syntax="string" validator="no" i18nKey="a533">
                        <DefaultValues>
                            <Value>http://local.pnet.ch:8090/fidouaf/v1/public/isAuthenticated/</Value>
                        </DefaultValues>
                    </AttributeSchema>

                    <AttributeSchema name="allowed-time-diff" resourceName="allowedTimeDiff"
                                     type="single" syntax="number" validator="no" i18nKey="a534">
                        <DefaultValues>
                            <Value>300</Value>
                        </DefaultValues>
                    </AttributeSchema>

                </SubSchema>
            </Organization>
        </Schema>
    </Service>
</ServicesConfiguration>
